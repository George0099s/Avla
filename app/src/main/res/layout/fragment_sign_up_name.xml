<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SignUp.SignUpNameFragment">

    <EditText
        android:id="@+id/first_name_ed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/first_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/last_name_ed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/last_name_string"
        app:layout_constraintEnd_toEndOf="@+id/first_name_ed"
        app:layout_constraintStart_toStartOf="@+id/first_name_ed"
        app:layout_constraintTop_toBottomOf="@+id/first_name_ed" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/whats_your_name"
        app:layout_constraintBottom_toTopOf="@+id/first_name_ed"
        app:layout_constraintStart_toStartOf="@+id/first_name_ed" />

    <EditText
        android:id="@+id/age_ed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:inputType="number"
        android:text="@string/age_string"
        app:layout_constraintEnd_toEndOf="@+id/last_name_ed"
        app:layout_constraintStart_toStartOf="@+id/last_name_ed"
        app:layout_constraintTop_toBottomOf="@+id/last_name_ed" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_old_are_you"
        app:layout_constraintBottom_toTopOf="@+id/age_ed"
        app:layout_constraintStart_toStartOf="@+id/age_ed" />

</androidx.constraintlayout.widget.ConstraintLayout>